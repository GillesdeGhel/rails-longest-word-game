<div class="container">

<ul class="list-inline">
  <% @grid.each do |letter| %>
  <div class="col-xs-1">
    <div class="letter"><li> <%= letter.upcase %></li></div>
  </div>
  <% end %>
</ul>

<br>

<form action="/score" method="post" class="form-inline">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag 'grid', @grid %>
  <input type="text" name="word" class="form-group">
  <input type="submit" value="Confirm" class="btn btn-primary form-group">
</form>
</div>
